<h3 class="cp-results">Your search results</h3>
<div class="row">
{{#each bootcamps as |bootcamp|}}
  <div class="col col-12 col-sm-6 col-lg-4">
    <div class="card text-center mb-3">
      <div class="card-body mb-3">
        <h5 class="card-title">{{name}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{location}}</h6>
        <p class="card-text">{{limitText info}}</p>
        <a href="/bootcamp/{{id}}" class="stretched-link">Learn more</a><br />
        <a href="{{bootcamp_url}}" class="card-link">Visit bootcamp website</a>
      </div>
    </div>
  </div>
{{/each}}
</div>
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-end">
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>