<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coding-Compass</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <main>
      <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="/">Coding-Compass</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="/">Home
                  <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/results">Bootcamps</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/sign-up">Sign Up</a>
              </li>
              {{#if loggedIn}}
                <li class="nav-item">
                  <a class="nav-link" href="/" id="logout-link">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              {{/if}}
            </ul>

            <form id="search-form" class="form-inline my-2 my-lg-0">
              <input
                class="form-control mr-sm-2 searchInput"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button
                id="submit-btn"
                class="btn btn-outline-success my-2 my-sm-0"
                type="submit"
                form="search-form"
              >
                Search
              </button>
            </form>

          </div>
        </nav>
        {{!-- <nav>
          {{#if loggedIn}}
            <a href="/login">login</a>
          {{else}}
            <a href="/homepage">dashboard</a>
            <button id="logout" class="btn-no-style">logout</button>
          {{/if}}
        </nav> --}}
      </header>
      <div class="container" id="body-container">
          {{{body}}}
      </div>

      <footer id="footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
        <div class="container text-center">
          <small>Copyright &copy; Coding-Compass</small>
        </div>
      </footer>

    </main>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{else}}
      <script src="/javascript/login.js"></script>
    {{/if}}
    <script src="/javascript/search.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>

</html>